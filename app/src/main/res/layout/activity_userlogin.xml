<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".userlogin">

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="152dp"
        android:layout_height="186dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/kotak"
        android:backgroundTint="@color/oren"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/userlogo" />

    <TextView
        android:id="@+id/utextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="264dp"
        android:fontFamily="@font/maextrabold"
        android:text="Kata Sandi"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nama"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/kon"
        android:fontFamily="@font/maextrabold"
        android:hint="Masukan alamat email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/utextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="416dp"
        android:fontFamily="@font/maextrabold"
        android:text="Email terdaftar"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/masuking"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/maextrabold"
        android:text="Masuk"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/up"
        android:fontFamily="@font/maextrabold"
        android:text="Halo Pengguna"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/userdaftarb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:background="@drawable/masuking"
        android:backgroundTint="#D95440"
        android:fontFamily="@font/maextrabold"
        android:text="Daftar"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/masuk"
        app:layout_constraintStart_toEndOf="@+id/masuk"
        app:layout_constraintTop_toTopOf="@+id/masuk"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/kon"
        android:ems="10"
        android:fontFamily="@font/maextrabold"
        android:hint="Masukan kata sandi anda"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>