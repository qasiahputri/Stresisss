<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".userdaftar">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/kotakkuning"
        android:fontFamily="@font/maextrabold"
        android:text="Silahkan isi data berikut"
        android:textSize="17dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/userdaftarb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/orenbut"
        android:backgroundTint="@color/oren"
        android:fontFamily="@font/maextrabold"
        android:text="Daftar"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dtgl"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/kon"
        android:fontFamily="@font/maextrabold"
        android:hint="Masukkan tanggal lahir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dnama"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="556dp"
        android:background="@drawable/kon"
        android:fontFamily="@font/maextrabold"
        android:hint="Masukkan nama lengkap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dalamat"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="384dp"
        android:background="@drawable/kon"
        android:fontFamily="@font/maextrabold"
        android:hint="Masukkan alamat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/demail"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/kon"
        android:ems="10"
        android:fontFamily="@font/maextrabold"
        android:hint="Masukan alamat email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dpw"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/kon"
        android:ems="10"
        android:fontFamily="@font/maextrabold"
        android:hint="Masukan kata sandi"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>