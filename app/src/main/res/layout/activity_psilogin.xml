<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".psilogin">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="152dp"
      android:layout_height="186dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="84dp"
      android:layout_marginEnd="128dp"
      android:background="@drawable/bgpsi"
      android:backgroundTint="@color/kuning"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/psilogo" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginBottom="264dp"
      android:fontFamily="@font/maextrabold"
      android:text="Kata Sandi"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/psipassword"
      android:layout_width="348dp"
      android:layout_height="50dp"
      android:layout_marginStart="28dp"
      android:layout_marginBottom="180dp"
      android:background="@drawable/isi"
      android:ems="10"
      android:fontFamily="@font/maextrabold"
      android:hint="Masukan kata sandi anda"
      android:inputType="textPassword"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <com.google.android.material.textfield.TextInputEditText
      android:layout_width="348dp"
      android:layout_height="50dp"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="336dp"
      android:background="@drawable/isi"
      android:fontFamily="@font/maextrabold"
      android:hint="Masukan nama pengguna anda"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginBottom="416dp"
      android:fontFamily="@font/maextrabold"
      android:text="Nama Pengguna"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="140dp"
      android:layout_marginBottom="104dp"
      android:background="@drawable/masuking"
      android:backgroundTint="@color/oren"
      android:fontFamily="@font/maextrabold"
      android:text="Masuk"
      android:textAllCaps="false"
      app:cornerRadius="10dp"
      app:iconPadding="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/up"
      android:fontFamily="@font/maextrabold"
      android:text="  Halo, Psikolog"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>